<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="0dp"
    android:layout_weight="0.93">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_register"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        tools:context="com.example.kevin.capstoneproject.Register">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/custom_edittext_selector"
            android:paddingLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/et_fname"
            android:hint="First Name" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/custom_edittext_selector"
            android:paddingLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/et_lname"
            android:hint="Last Name" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:background="@drawable/custom_edittext_selector"
            android:paddingLeft="10dp"
            android:layout_marginTop="5dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/et_age"
            android:hint="Age" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center" >

            <TextView
                android:text="Gender"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:id="@+id/tv_gender" />

            <RadioGroup
                android:id="@+id/rg_gender"
                android:layout_width="300dp"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/rb_male"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:layout_marginLeft="5dp"
                    android:text="Male"/>

                <RadioButton
                    android:id="@+id/rb_female"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female"
                    android:layout_marginLeft="5dp"/>
            </RadioGroup>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:background="@drawable/custom_spinner">

            <Spinner
                android:id="@+id/sp_setsport"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:spinnerMode="dropdown" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/ic_action_name" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_edittext_selector"
            android:layout_gravity="center"
            android:layout_marginTop="15dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/et_others"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:hint="Others" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:background="@drawable/custom_spinner">

            <Spinner
                android:id="@+id/sp_setlevel"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:spinnerMode="dropdown" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/ic_action_name" />
        </RelativeLayout>


        <TextView
            android:text="Set your skill"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/setyourskill" />


        <TextView
            android:text="Strength - 5"
            android:textSize="20dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/str" />

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="10"
            android:progress="5"
            android:progressDrawable="@drawable/progress"
            android:thumb="@drawable/control"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:id="@+id/sb_strength" />

        <TextView
            android:text="Agility - 5"
            android:textSize="20dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/agi" />
        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="10"
            android:progress="5"
            android:progressDrawable="@drawable/green_progress"
            android:thumb="@drawable/green_control"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:id="@+id/sb_agility" />

        <TextView
            android:text="Stamina - 5"
            android:textSize="20dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sta" />

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="10"
            android:progress="5"
            android:progressDrawable="@drawable/blue_progress"
            android:thumb="@drawable/blue_control"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:id="@+id/sb_stamina" />


        <Button
            android:text="FINISH"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/custom_editbutton"
            android:layout_gravity="center"
            android:id="@+id/btn_finish" />


    </LinearLayout>

</ScrollView>